{
  "name": "Rails7WithReactTailwindCSSBootstrapExample",
  "private": "true",
  "scripts": {
    "build": "node esbuild.config.js",
    "build:js": "esbuild app/javascript/**/*.* --bundle --loader:.js=jsx --outdir=app/assets/builds",
    "build:css": "tailwindcss --postcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.1.0",
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.14.6",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.7"
  }
}
